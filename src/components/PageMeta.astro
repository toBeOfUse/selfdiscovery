---
import { SEO } from "astro-seo";
import { getImage } from "astro:assets";
import { imageAsset } from "../images";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;

let optimizedImage;
if (image) {
  optimizedImage = await getImage({ src: await imageAsset(image), quality: 90 });
}

const favicon = (await getImage({ src: await imageAsset("cool-m-small.png") })).src;
---

<Fragment>
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title,
        type: "website",
        image: image ? optimizedImage!.src : "",
      },
      image: image
        ? {
            url: optimizedImage!.src,
          }
        : {},
    }}
  />
  <title>{title}</title>
  <link rel="icon" type="image/png" href={favicon} />
</Fragment>
