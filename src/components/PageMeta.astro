---
import { SEO } from "astro-seo";
import { getImage } from "astro:assets";
import { imageAsset } from "../images";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;

const imageSrc = image ? imageAsset(image) : null;
const optimizedImage = image ? imageSrc?.optimized : null;

const favicon = (await getImage({ src: imageAsset("cool-m-small.png") })).src;
---

<Fragment>
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title,
        type: "website",
        image: image ? optimizedImage!.src : "",
      },
      optional: {
        description,
      },
      image: image
        ? {
            url: optimizedImage!.src,
            alt: imageSrc!.alt,
          }
        : {},
    }}
  />
  <title>{title}</title>
  <link rel="icon" type="image/png" href={favicon} />
</Fragment>
